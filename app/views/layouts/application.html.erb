<!DOCTYPE html>
<html>
  <head>
    <title>Biblioteca</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Logado como #{current_user.name}" %> | <%= link_to 'Início', root_path %> | <%= link_to 'Sair', sessions_destroy_path, method: :delete %> | <%= link_to 'Editar', users_edit_path(current_user.id) %> | <%= link_to 'Mostrar Perfil', users_show_path(current_user.id) %>

      <% if current_user.level == 0 %>
      <h2> Você é um administrador </h2>
      <%= link_to 'Mostrar todos', users_index_path %> | <%= link_to 'Cadastrar Livros', books_new_path %> | <%= link_to 'Mostrar Acervo', books_index_path %>
      <% end %>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Entre', sessions_create_path %> ou <%= link_to 'Cadastre-se', users_new_path %>
    <% end %>
    <hr>

    <% if notice %>
            <%= notice %>
    <% end %>

    <% if alert %>
            <%= alert %>
    <% end %>

    <%= yield %>


  </body>
</html>
