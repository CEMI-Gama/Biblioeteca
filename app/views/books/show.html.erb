  table.barby-barcode {
    border-spacing: 0; margin: auto; 
  }
  
  tr.barby-row {
    
  }
  
  td.barby-cell {
    width: 3px; height: 100px; 
  }
  
  td.barby-cell.on { 
    background: #000; 
  }

</style>