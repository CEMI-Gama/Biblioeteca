<div class="card text-center">
  <div class="card-header">
  <h1>Cadastro do Usuário</h1>
  </div>
  <%= form_for @user, url:users_create_path do |f| %>
  <div class="row">
	<div class="col-12 col-lg-12 col-sm-6">
		<div class="card">
          <div class="card-header">
		    <%= f.label :name, 'Nome: '%>
	        <%= f.text_field :name %><br>
		  </div>
		    <ul class="list-group list-group-flush">
		      <li class="list-group-item">
                <%= f.label :class_code, 'Turma: ' %>
	            <%= f.text_field :class_code %><br>
	          </li>
		      <li class="list-group-item">
		        <%= f.label :register, 'Matrícula: ' %>
	            <%= f.text_field :register %><br>
		      </li>
		      <li class="list-group-item">
				<%= f.label :cpf, 'CPF: ' %>
	            <%= f.text_field :cpf %><br>						  
		      </li>
		      <li class="list-group-item">
				<%= f.label :address, 'Endereço: ' %>
	            <%= f.text_field :address %><br><br>				   
		      </li>
		      <li class="list-group-item">
				<%= f.label :password, 'Senha: ' %>
	            <%= f.password_field :password %><br>				   
		      </li>
              <li class="list-group-item">
				<%= f.label :password_confirmation, 'Confirme a Senha: ' %>
	            <%= f.password_field :password_confirmation %><br>		           
		      </li>
		      <li class="list-group-item">
				<%= f.submit 'Enviar' %>				   
		      </li>
		    </ul>
        </div>

	</div>
  </div>

<% end %>
